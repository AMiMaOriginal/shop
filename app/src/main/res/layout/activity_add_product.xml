<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AddProduct">

    <EditText
        android:id="@+id/addNameProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="200dp"
        style="@style/inputText"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/name" />

    <Spinner
        android:id="@+id/addCategoryProduct"
        style="@style/inputText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addPriceProduct"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/addPriceProduct"
        style="@style/inputText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addNameProduct"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="number"
        android:hint="Цена" />

    <Button
        android:id="@+id/addProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addCategoryProduct"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        style="@style/inputText"
        android:textColor="@color/white"
        android:text="@string/add" />

    <TextView
        android:id="@+id/addProductError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addProduct"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        style="@style/inputText"
        android:textColor="@color/red" />

</RelativeLayout>